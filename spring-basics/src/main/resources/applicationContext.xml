<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">
           
  <context:component-scan base-package="com.nishant.spring.basics"/>
           
  <bean id="xmlJdbcConnection" class="com.nishant.spring.basics.springbasics.xml.XmlJdbcConnection">
  </bean>

  <bean id="xmlPersonDAO" class="com.nishant.spring.basics.springbasics.xml.XmlPersonDAO">
    <property name="xmlJdbcConnection" ref="xmlJdbcConnection"/>
  </bean>
  
  <bean id="xmlClassDAO" class="com.nishant.spring.basics.springbasics.xml.XmlClassDAO">
    <property name="xmlJdbcConnection" ref="xmlJdbcConnection"/>
  </bean>
  
  <bean id="xmlPersonService" class="com.nishant.spring.basics.springbasics.xml.XmlPersonService">
  	<property name="xmlPersonDAO" ref="xmlPersonDAO"/>
  	<property name="xmlClassDAO" ref="xmlClassDAO"/>
  </bean>

  <!-- more bean definitions go here -->

</beans>